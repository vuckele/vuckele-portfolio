<Box>
  <BoxContent className="space-y-3">
    <span class="flex items-center justify-start gap-2">
      <Mail className="size-4" />
      Contact me via
      <a
        href={`mailto:${PROFILE_INFO.email}`}
        class="flex underline underline-offset-4"
      >
        E-mail
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <Briefcase className="size-4" />
      Take a look at my
      <a
        href="https://drive.google.com/file/d/10jSTpR59LFjpLcIDIrtY5hlYE7qIw8rl/view?usp=sharing"
        target="_blank"
        class="underline underline-offset-4"
      >
        Resume
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <LinkedinIcon className="size-4" />
      Let's connect on
      <a
        href="https://www.linkedin.com/in/vukbrankovic/"
        class="underline underline-offset-4"
        target="_blank"
      >
        LinkedIn
      </a>
    </span>

    <span class="flex items-center justify-start gap-2">
      <GithubIcon className="size-4" />
      Check out my repos on
      <a
        href="https://github.com/vuckele"
        class="underline underline-offset-4"
        target="_blank"
      >
        GitHub
      </a>
    </span>
  </BoxContent>
</Box>
